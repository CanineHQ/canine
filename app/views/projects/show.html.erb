<%= content_for :title, "Projects ##{@project.id}" %>
<%= turbo_stream_from @project %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Projects", projects_path, class: "text-black dark:text-white" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Project #<%= @project.id %>
    </h1>
    <%= link_to t("edit"), edit_project_path(@project), class: "btn btn-secondary" %>
  </div>
  <div>
    <%= button_to "Deploy", deploy_project_url(@project), class: "btn btn-primary m-1", data: { turbo: false, disable_with: "Loading..." } %>
    <%= link_to "Environment Variables", project_projects_environment_variables_url(@project) %>
    <%= link_to "Settings", edit_project_url(@project) %>
  </div>
  <div class="p-8 bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded shadow">
    <%= render @project %>
  </div>
</div>
