<!-- Main content -->
<div class="flex-1 p-4">
  <h2 class="text-2xl font-bold mb-4">Events</h2>
  
  <ul class="space-y-4">
    <% project.deployments.order(created_at: :desc).limit(5).each do |deployment| %>
      <li class="border-b pb-2">
        <div class="font-semibold"><%= deployment.status.titleize %></div>
        <div class="text-sm text-gray-600">
          Deployed at: <%= deployment.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
        </div>
      </li>
    <% end %>
  </ul>
  
  <% if project.deployments.count > 5 %>
    <%= link_to "View all deployments", project_deployments_path(project), class: "mt-4 text-blue-600 hover:underline" %>
  <% end %>
</div>