<%
  badge_color = case cluster.status
  when "initializing", "installing"
    "warning"
  when "running"
    "success"
  when "failed", "destroying", "deleted"
    "error"
  end
%>
<div aria-label="Badge" class="badge border-0 bg-<%= badge_color %>/10 font-medium capitalize text-<%= badge_color %>">
  <%= cluster.status %>
</div>
