<%
  badge_color = case build_cloud.status
  when "pending"
    "warning"
  when "installing"
    "warning"
  when "active"
    "success"
  when "uninstalling"
    "warning"
  when "uninstalled"
    "secondary"
  when "failed"
    "error"
  end
%>
<div class="text-right">
  <div aria-label="Badge" class="badge border-0 bg-<%= badge_color %>/10 font-medium capitalize text-<%= badge_color %>">
    <%= build_cloud.status.humanize %>
  </div>
</div>
