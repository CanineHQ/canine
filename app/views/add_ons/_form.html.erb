<%= form_with(model: add_on) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", value: RandomNameGenerator.generate_name %>
  </div>

  <div class="form-group">
    <%= form.label :cluster_id %>
    <%= form.collection_select :cluster_id, current_user.clusters, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :helm_chart_url, as: :hidden, class: "form-control", data: { 'new-add-ons-target': "input" } %>
  </div>

  <h4>Select common</h4>
  <div class="grid grid-cols-4 gap-4">
    <% YAML.load_file(Rails.root.join('resources', 'helm', 'supported.yml'))['helm']['charts'].each do |chart| %>
      <div class="card bg-base-100 shadow-xl cursor-pointer group overflow-hidden"
           data-new-add-ons-target="card"
           data-action="click->new-add-ons#selectChart"
           data-new-add-ons-repository-value="<%= chart['repository'] %>">
        <figure class="px-10 pt-10 overflow-visible">
          <div class="w-full h-40 flex items-center justify-center">
            <img src="<%= chart['logo'] %>" alt="<%= chart['name'] %>" class="max-w-full max-h-full object-contain transition-transform duration-300 group-hover:scale-110"/>
          </div>
        </figure>
        <div class="card-body items-center text-center">
          <h2 class="card-title"><%= chart['name'].titleize %></h2>
        </div>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), add_ons_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), add_on_path(@add_on), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
