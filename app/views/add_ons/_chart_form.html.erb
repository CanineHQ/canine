<% chart['template'].each do |variable| %>
  <% next if variable['hidden'] %>
  <div class="form-group">
    <%= form.label variable['name'] %>
    <% if variable['type'] == 'string' %>
      <%= form.text_field variable['key'], name: "metadata[#{chart['name']}][#{variable['key']}]", class: "input input-bordered" %>
    <% elsif variable['type'] == 'size' %>
      <%= form.text_field(
        variable['key'],
        name: "metadata[#{chart['name']}][#{variable['key']}][value]",
        class: "input input-bordered",
        type: 'number',
        value: variable['default'][..-3]
      ) %>
      <%= form.select(
        variable['key'],
        options_for_select([['Gi', 'Gi'], ['Mi', 'Mi'], ['Ki', 'Ki']]),
        { name: "metadata[#{chart['name']}][#{variable['key']}][unit]", value: variable['default'][-2..] },
        { class: "select select-bordered" }
      ) %>
    <% end %>
  </div>
<% end %>