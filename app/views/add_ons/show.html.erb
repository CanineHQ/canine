<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <div class="text-sm">
        <%= render "add_ons/status", add_on: @add_on %>
      </div>
      <h1 class="h3">
        <%= @add_on.name %>
      </h1>
      <div class="flex flex-row">
        <%= @add_on.cluster.name %>
        <%= @add_on.chart_type %>
      </div>
      <% if @add_on.installed? %>
        <div>
          Internal URL: <a><%= @service.internal_url %></a> <i class="bi bi-copy cursor-pointer" data-controller="clipboard" data-clipboard-text="<%= @service.internal_url %>"></i>
        </div>
        <% if @service.has_external_url? %>
          <div>
            External URL: <a><%= @service.external_url %></a> <i class="bi bi-copy cursor-pointer"></i>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="p-8 bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded shadow">
    <%= render "add_ons/#{@add_on.chart_type}", service: @service %>
  </div>
  <%= button_to "Uninstall", add_on_path(@add_on), method: :delete, class: "btn btn-danger" %>
</div>
