<div class="bg-gray-900 min-h-screen">
  <%= render "static/landing_page/github_corner" %>

  <!-- Header -->
  <div class="relative isolate overflow-hidden">
    <svg class="absolute inset-0 -z-10 h-full w-full stroke-white/10 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]" aria-hidden="true">
      <defs>
        <pattern id="comparison-pattern" width="200" height="200" x="50%" y="-1" patternUnits="userSpaceOnUse">
          <path d="M.5 200V.5H200" fill="none"></path>
        </pattern>
      </defs>
      <rect width="100%" height="100%" stroke-width="0" fill="url(#comparison-pattern)"></rect>
    </svg>

    <div class="mx-auto max-w-7xl px-6 py-16 lg:px-8">
      <div class="mx-auto max-w-4xl text-center">
        <%= link_to root_path, class: "inline-block mb-8" do %>
          <img class="h-[50px] mx-auto" src="/images/logo-full.webp" alt="Canine">
        <% end %>
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl">
          Canine vs <%= @comparison["name"] %>
        </h1>
        <p class="mt-4 text-xl text-indigo-400 font-medium">
          <%= @comparison["tagline"] %>
        </p>
        <p class="mt-6 text-lg leading-8 text-gray-300 max-w-2xl mx-auto">
          <%= @comparison["description"] %>
        </p>
      </div>
    </div>
  </div>

  <!-- Comparison Table -->
  <div class="mx-auto max-w-5xl px-6 pb-24 lg:px-8">
    <div class="relative">
      <!-- Canine highlighted background column -->
      <div class="absolute left-1/3 w-1/3 -top-8 bottom-0 bg-indigo-950/50 border border-indigo-500/30 rounded-xl"></div>

      <!-- RECOMMENDED badge -->
      <div class="absolute left-1/3 -top-8 w-1/3 flex justify-center">
        <div class="bg-indigo-500 text-white text-xs font-bold px-3 py-1 rounded-t-lg">
          RECOMMENDED
        </div>
      </div>

      <!-- Table content -->
      <table class="table w-full relative">
        <thead>
          <tr>
            <th class="w-1/3"></th>
            <th class="w-1/3 text-center py-10 px-6">
              <div class="flex flex-col items-center gap-3">
                <img src="/images/logo-compact.webp" alt="Canine" class="h-14 w-14">
                <span class="text-white font-bold text-xl">Canine</span>
              </div>
            </th>
            <th class="w-1/3 text-center py-10 px-6">
              <span class="text-gray-400 font-medium text-lg"><%= @comparison["name"] %></span>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @comparison["features"].each do |item| %>
            <tr>
              <td class="py-7 px-8 text-gray-300 font-medium border-t border-gray-700/30"><%= item["name"] %></td>
              <td class="py-7 px-8 text-center text-white border-t border-indigo-500/20"><%= item["canine"] %></td>
              <td class="py-7 px-8 text-center text-gray-500 border-t border-gray-700/30"><%= item["competitor"] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- CTA -->
    <div class="mt-24 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to try Canine?</h2>
      <p class="text-gray-400 mb-8 max-w-xl mx-auto">
        Deploy your first application in minutes with our Kubernetes-native platform.
      </p>
      <div class="flex justify-center gap-4">
        <%= link_to "Start for Free", new_user_registration_path, class: "btn btn-primary btn-lg" %>
        <%= link_to "https://docs.canine.sh", class: "btn btn-outline btn-lg text-white" do %>
          Read the Docs
        <% end %>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <%= render "static/landing_page/footer" %>
</div>
