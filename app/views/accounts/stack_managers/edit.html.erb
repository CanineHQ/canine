<%= settings_layout do %>
  <h2 class="text-2xl font-bold">Stack Manager</h2>
  <hr class="mt-3 mb-4 border-t border-base-300" />
  
  <%= turbo_frame_tag "current_account_stack_manager" do %>
    <div class="card card-bordered bg-base-100">
      <div class="card-body">
        <h3 class="card-title">Edit Stack Manager Configuration</h3>
        
        <%= render 'form', stack_manager: @stack_manager, account: current_account %>
      </div>
    </div>
  <% end %>
<% end %>