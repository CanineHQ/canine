<%= settings_layout do %>
  <h2 class="text-2xl font-bold">Stack Manager</h2>
  <hr class="mt-3 mb-4 border-t border-base-300" />
  
  <%= turbo_frame_tag "current_account_stack_manager" do %>
    <% if @stack_manager %>
      <%= render "accounts/stack_managers/show", stack_manager: @stack_manager, account: current_account %>
    <% else %>
      <%= render "accounts/stack_managers/empty", account: current_account %>
    <% end %>
  <% end %>
<% end %>