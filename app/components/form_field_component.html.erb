<div class="form-control grid grid-cols-1 lg:grid-cols-4 gap-y-4 xl:gap-y-0 xl:gap-x-10 gap-x-4">
  <div class="col-span-1">
    <div class="label">
      <span class="font-bold"><%= @label %></span>
    </div>
    <% if @description %>
      <div class="label text-sm text-base-content/80"><%= @description %></div>
    <% end %>
  </div>
  <div class="col-span-3 flex items-center">
    <div class="w-full">
    <%= content %>
    </div>
  </div>
</div>